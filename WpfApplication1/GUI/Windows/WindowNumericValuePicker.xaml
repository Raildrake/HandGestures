<Window x:Class="HandGestures.GUI.Windows.WindowNumericValuePicker"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:GUI="clr-namespace:HandGestures.GUI"
        Title="WindowNumericValuePicker" Height="120" Width="682" ResizeMode="NoResize">
    <Grid>
        <GUI:LabelSlider Height="35" HorizontalAlignment="Stretch" Margin="0,12,0,0" x:Name="sldValue" VerticalAlignment="Top" Width="Auto" VerticalContentAlignment="Stretch" HorizontalContentAlignment="Stretch" FlowDirection="LeftToRight" Minimum="-1000" Maximum="1000" TickFrequency="100" />
        <Button Content="OK" Height="30" HorizontalAlignment="Right" Name="cmdOK" VerticalAlignment="Bottom" Width="100" Click="cmdOK_Click" />
        <Button Content="Cancel" Height="30" HorizontalAlignment="Right" Margin="0,0,105,0" Name="cmdCancel" VerticalAlignment="Bottom" Width="100" Click="cmdCancel_Click" />
    </Grid>
</Window>
